{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build",
      "type": "shell",
      "command": "go",
      "args": [
        "build",
        "-v",
        "-o",
        "${workspaceFolderBasename}",
        "."
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": [
        "$go"
      ],
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": false
      }
    },
    {
      "label": "build-linux",
      "type": "shell",
      "command": "go",
      "args": [
        "build",
        "-v",
        "-o",
        "${workspaceFolderBasename}-linux",
        "."
      ],
      "options": {
        "env": {
          "GOOS": "linux",
          "GOARCH": "amd64"
        }
      },
      "group": "build",
      "problemMatcher": [
        "$go"
      ]
    },
    {
      "label": "build-windows",
      "type": "shell",
      "command": "go",
      "args": [
        "build",
        "-v",
        "-o",
        "${workspaceFolderBasename}.exe",
        "."
      ],
      "options": {
        "env": {
          "GOOS": "windows",
          "GOARCH": "amd64"
        }
      },
      "group": "build",
      "problemMatcher": [
        "$go"
      ]
    },
    {
      "label": "build-all-platforms",
      "dependsOrder": "parallel",
      "dependsOn": [
        "build",
        "build-linux",
        "build-windows"
      ]
    },
    {
      "label": "run",
      "type": "shell",
      "command": "go",
      "args": [
        "run",
        "."
      ],
      "group": "build",
      "problemMatcher": [
        "$go"
      ],
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": true
      }
    },
    {
      "label": "run-with-race",
      "type": "shell",
      "command": "go",
      "args": [
        "run",
        "-race",
        "."
      ],
      "group": "build",
      "problemMatcher": [
        "$go"
      ]
    },
    {
      "label": "test",
      "type": "shell",
      "command": "go",
      "args": [
        "test",
        "-v",
        "-cover",
        "./..."
      ],
      "group": {
        "kind": "test",
        "isDefault": true
      },
      "problemMatcher": [
        "$go"
      ],
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": true
      }
    },
    {
      "label": "test-race",
      "type": "shell",
      "command": "go",
      "args": [
        "test",
        "-v",
        "-race",
        "./..."
      ],
      "group": "test",
      "problemMatcher": [
        "$go"
      ]
    },
    {
      "label": "test-short",
      "type": "shell",
      "command": "go",
      "args": [
        "test",
        "-v",
        "-short",
        "./..."
      ],
      "group": "test",
      "problemMatcher": [
        "$go"
      ]
    },
    {
      "label": "test-cover-profile",
      "type": "shell",
      "command": "go",
      "args": [
        "test",
        "-v",
        "-coverprofile=coverage.out",
        "./..."
      ],
      "problemMatcher": [
        "$go"
      ],
      "group": "test"
    },
    {
      "label": "test-cover-html",
      "type": "shell",
      "command": "go",
      "args": [
        "tool",
        "cover",
        "-html=coverage.out",
        "-o",
        "coverage.html"
      ],
      "dependsOn": [
        "test-cover-profile"
      ],
      "group": "test",
      "presentation": {
        "reveal": "always"
      }
    },
    {
      "label": "benchmark",
      "type": "shell",
      "command": "go",
      "args": [
        "test",
        "-v",
        "-bench=.",
        "-benchmem",
        "./..."
      ],
      "group": "test",
      "problemMatcher": [
        "$go"
      ]
    },
    {
      "label": "mod-tidy",
      "type": "shell",
      "command": "go",
      "args": [
        "mod",
        "tidy"
      ],
      "problemMatcher": []
    },
    {
      "label": "mod-download",
      "type": "shell",
      "command": "go",
      "args": [
        "mod",
        "download"
      ],
      "problemMatcher": []
    },
    {
      "label": "fmt",
      "type": "shell",
      "command": "go",
      "args": [
        "fmt",
        "./..."
      ],
      "problemMatcher": []
    },
    {
      "label": "vet",
      "type": "shell",
      "command": "go",
      "args": [
        "vet",
        "./..."
      ],
      "problemMatcher": [
        "$go"
      ]
    },
    {
      "label": "lint",
      "type": "shell",
      "command": "golangci-lint",
      "args": [
        "run",
        "./..."
      ],
      "problemMatcher": [],
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      }
    },
    {
      "label": "clean",
      "type": "shell",
      "command": "rm",
      "args": [
        "-f",
        "${workspaceFolderBasename}",
        "${workspaceFolderBasename}-linux",
        "${workspaceFolderBasename}.exe",
        "coverage.out",
        "coverage.html"
      ],
      "problemMatcher": []
    },
    {
      "label": "pre-commit",
      "dependsOrder": "sequence",
      "dependsOn": [
        "fmt",
        "mod-tidy",
        "vet",
        "test"
      ],
      "problemMatcher": [
        "$go"
      ]
    },
    {
      "label": "full-check",
      "dependsOrder": "sequence",
      "dependsOn": [
        "fmt",
        "mod-tidy",
        "vet",
        "test-race",
        "build"
      ]
    }
  ]
}