{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug Main Package",
      "type": "go",
      "request": "launch",
      "mode": "auto",
      "program": "${workspaceFolder}/cmd/app",
      "console": "integratedTerminal",
      // Визуализация переменных и горутин
      "showGlobalVariables": false,
      "showRegisters": false,
      "hideSystemGoroutines": true,
      // Глубина трассировки стека
      "stackTraceDepth": 50,
      // Упрощенное логирование
      "showLog": false,
      "trace": "log",
      "logOutput": "debugger",
      // Параметры запуска
      "args": [],
      "env": {},
      "cwd": "${workspaceFolder}",
      "stopOnEntry": false,
      // Флаги Delve
      "dlvFlags": [
        "--check-go-version=false",
      ],
    },
    {
      "name": "Debug Current File",
      "type": "go",
      "request": "launch",
      "mode": "auto",
      "program": "${file}",
      "console": "integratedTerminal",
      "showGlobalVariables": false,
      "hideSystemGoroutines": true,
      "stackTraceDepth": 50,
      "showLog": false,
      "trace": "log",
      "logOutput": "debugger",
      "cwd": "${fileDirname}",
      "stopOnEntry": false,
      "dlvFlags": [
        "--check-go-version=false",
      ],
    },
    {
      "name": "Debug with Arguments",
      "type": "go",
      "request": "launch",
      "mode": "auto",
      "program": "${workspaceFolder}/cmd/app",
      "console": "integratedTerminal",
      "showGlobalVariables": false,
      "hideSystemGoroutines": true,
      "stackTraceDepth": 50,
      "showLog": false,
      "trace": "log",
      "logOutput": "debugger",
      "args": [
        "--port=9091",
        "--debug"
      ],
      "env": {
        "PORT": "9091",
        "DEBUG": "true"
      },
      "cwd": "${workspaceFolder}",
      "stopOnEntry": false,
      "dlvFlags": [
        "--check-go-version=false",
      ],
    },
    {
      "name": "Debug with Goroutine Inspection",
      "type": "go",
      "request": "launch",
      "mode": "auto",
      "program": "${workspaceFolder}/cmd/app",
      "console": "integratedTerminal",
      // Упрощенная видимость горутин
      "showGlobalVariables": false,
      "hideSystemGoroutines": false,
      "stackTraceDepth": 100,
      "showLog": false,
      "trace": "log",
      "logOutput": "debugger",
      "args": [],
      "env": {
        "GOMAXPROCS": "1"
      },
      "cwd": "${workspaceFolder}",
      "stopOnEntry": false,
      "dlvFlags": [
        "--check-go-version=false",
      ],
      "dlvLoadConfig": {
        "followPointers": true,
        "maxVariableRecurse": 2,
        "maxStringLen": 1024,
        "maxArrayValues": 128,
        "maxStructFields": 20
      }
    },
    {
      "name": "Debug with Race Detector",
      "type": "go",
      "request": "launch",
      "mode": "auto",
      "program": "${workspaceFolder}/cmd/app",
      "buildFlags": "-race", // <--- Ключевой момент
      "console": "integratedTerminal"
    },
    {
      "name": "Attach to Process",
      "type": "go",
      "request": "attach",
      "mode": "local",
      "processId": "${command:pickProcess}",
      "showGlobalVariables": false,
      "hideSystemGoroutines": true,
      "stackTraceDepth": 50,
      "showLog": false,
      "trace": "log",
      "logOutput": "debugger"
    },
    {
      "name": "Connect to Remote Delve",
      "type": "go",
      "request": "attach",
      "mode": "remote",
      "remotePath": "${workspaceFolder}",
      "port": 2345,
      "host": "127.0.0.1",
      "showGlobalVariables": false,
      "hideSystemGoroutines": true,
      "stackTraceDepth": 50,
      "showLog": false,
      "trace": "log",
      "logOutput": "debugger",
      "substitutePath": [
        {
          "from": "${workspaceFolder}",
          "to": "/app"
        }
      ]
    },
    {
      "name": "Debug Tests in Current File",
      "type": "go",
      "request": "launch",
      "mode": "test",
      "program": "${file}",
      "console": "integratedTerminal",
      "showGlobalVariables": false,
      "hideSystemGoroutines": true,
      "stackTraceDepth": 50,
      "showLog": false,
      "trace": "log",
      "logOutput": "debugger",
      "args": [
        "-test.v",
        "-test.run",
        ".*"
      ],
      "env": {},
      "cwd": "${fileDirname}",
    },
    {
      "name": "Debug Specific Test",
      "type": "go",
      "request": "launch",
      "mode": "test",
      "program": "${workspaceFolder}",
      "console": "integratedTerminal",
      "showGlobalVariables": false,
      "hideSystemGoroutines": true,
      "stackTraceDepth": 50,
      "showLog": false,
      "trace": "log",
      "logOutput": "debugger",
      "args": [
        "-test.v",
        "-test.run",
        "^${input:testName}$"
      ],
      "env": {},
      "cwd": "${workspaceFolder}",
    },
    {
      "name": "Debug All Tests in Package",
      "type": "go",
      "request": "launch",
      "mode": "test",
      "program": "${fileDirname}",
      "console": "integratedTerminal",
      "showGlobalVariables": false,
      "hideSystemGoroutines": true,
      "stackTraceDepth": 50,
      "showLog": false,
      "trace": "log",
      "logOutput": "debugger",
      "args": [
        "-test.v",
        "-test.cover"
      ],
      "env": {},
      "cwd": "${workspaceFolder}",
    },
    {
      "name": "Debug All Tests in Workspace",
      "type": "go",
      "request": "launch",
      "mode": "test",
      "program": "${workspaceFolder}",
      "console": "integratedTerminal",
      "showGlobalVariables": false,
      "hideSystemGoroutines": true,
      "stackTraceDepth": 50,
      "showLog": false,
      "trace": "log",
      "logOutput": "debugger",
      "args": [
        "-test.v",
        "-test.cover",
        "./..."
      ],
      "env": {},
      "cwd": "${workspaceFolder}",
    }
  ],
  "inputs": [
    {
      "id": "testName",
      "type": "promptString",
      "description": "Test function name (regex pattern)",
      "default": "TestMain"
    }
  ]
}